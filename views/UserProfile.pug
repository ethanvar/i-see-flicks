doctype html
html(lang='en')
  head
    <link rel="stylesheet" type="text/css" href="/css/UserProfile.css" />
  body
    if(session.signedin)
      include ./partials/headertwo
    else
      include ./partials/header
    .userPfp
      h1#userName #{user.name}
      //img(src='ProfilePic.png' alt='Profile' width='150' position:='' absolute='')
      button.btnEdit(type='button') Edit Profile
      button.followerBtn(type='button' onclick='showModal()') Follower list
      input#contributingUser(type='radio' name='Contributing User' value='Contributing User' checked='')
      #myModal.modal
        // Modal content
        .modal-content
          span.close(onclick='closeModal()') ×
          ul#followerList
      b3
        button.followingBtn(type='button' onclick='showFModal()') Following list
      #myFModal.fModal
        // Modal content
        .fModal-content
          span.fClose(onclick='closeFModal()') ×
          ul#followingList
      h4 #{user.about}
    .recentViewed
      h1 Recently Viewed
      .recentMovies
        p1
          a(href='/viewMovie') Movie 1
        p2 Movie 2
        p3 Movie 3
        p4 Movie 4
        p5 Movie 5
    .topReviews
      h1 Top Reviews
      .reviews
        p1 Review 1
        p2 Review 2
        p3 Review 3
        p4 Review 4
        p5 Review 5
    .sugUsers
      h1 Suggested Users
      ol#sugUsersList
    script(src='/scripts/MovieProject.js')
